@model Emp

<form method="post" ">
    <div class="border-5 p-3 mt-4">
        <div class="row pb-2 ">
            <h2 class="text-primary text-center">Delete Employee</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" disabled class="form-control" />
           
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Email" class="p-0"></label>
            <input asp-for="Email" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Department" class="p-0"></label>
            <input asp-for="Department" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="JoiningDate" class="p-0"></label>
            <input asp-for="JoiningDate" disabled class="form-control" />
           
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Employee" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary border-5 form-control">Back</a>
            </div>
        </div>


    </div>
</form>
