@model Clients

<form method="post" ">
    <div class="border-5 p-3 mt-4">
        <div class="row pb-2 ">
            <h2 class="text-primary text-center">Delete Client</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" disabled class="form-control" />
           
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Email" class="p-0"></label>
            <input asp-for="Email" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Role" class="p-0"></label>
            <input asp-for="Role" disabled class="form-control" />
        </div>

        <div class="row mt-5 ">
            <h2 class="text-primary">
                Addresses
            </h2>
        </div>
        @if (Model.Addresses.Count == 0)
        {
            <div class="alert alert-warning text-center mt-4" role="alert">
                No Addres is registered.
            </div>
            
        }
        <div class="container ">

            <table class="table-bordered">

                <tbody>
                    @for (int i = 0; i < Model.Addresses.Count; i++)
                    {
                        <tr>
                            <td><input type="text" asp-for="Addresses[i].Street" class="form-control" disabled placeholder="Street" /></td>
                            <td><input type="text" asp-for="Addresses[i].City" class="form-control" disabled placeholder="City" /></td>
                            <td><input type="text" asp-for="Addresses[i].State" class="form-control" disabled placeholder="State" /></td>
                            <td><input type="text" asp-for="Addresses[i].PinCode" class="form-control" disabled placeholder="Pin Code" /></td>
                            <td><input type="text" asp-for="Addresses[i].Country" class="form-control" disabled placeholder="Country" /></td>
                        </tr>
                    }

                </tbody>

            </table>

        </div>
        
        <div class="row mt-5">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Client" asp-action="Index" class="btn btn-outline-secondary border-5 form-control">Back</a>
            </div>
        </div>




    </div>
</form>
